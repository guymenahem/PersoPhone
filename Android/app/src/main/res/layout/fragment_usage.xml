<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.persophone.persophone_bottom.com.persophone.persophone_application.UsageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hel1_grid"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:layout_height="@dimen/top_tb_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Battery:"/>

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/usage_graph" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="6"
            android:layout_weight="0.60">

            <!-- Battery -->
            <!-- Battery title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=' Battery: '
                android:textSize="@dimen/rec_text_size"
                android:layout_row="0"
                android:layout_column="0"/>

            <!-- Battery value-->
            <TextView
                android:id="@+id/battery_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='High battery usage'
                android:textSize="@dimen/rec_text_size"
                android:layout_row="0"
                android:layout_column="1" />

            <!-- Battery badge-->
            <TextView
                android:id="@+id/battery_notification"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/danger_badge"
                android:text="High"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Memory -->
            <!-- Memory title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=' Memory: '
                android:textSize="@dimen/rec_text_size"
                android:layout_row="1"
                android:layout_column="0"/>

            <!-- Memory value-->
            <TextView
                android:id="@+id/memory_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='never critical'
                android:textSize="@dimen/rec_text_size"
                android:layout_row="1"
                android:layout_column="1" />

            <!-- Memory badge-->
            <TextView
                android:id="@+id/memory_notification"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ok_badge"
                android:text="Low"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Storage -->
            <!-- Storage title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=' Storage: '
                android:textSize="@dimen/rec_text_size"
                android:layout_row="2"
                android:layout_column="0"/>

            <!-- Storage value-->
            <TextView
                android:id="@+id/storage_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Average free is 4GB'
                android:textSize="@dimen/rec_text_size"
                android:layout_row="2"
                android:layout_column="1" />

            <!-- Storage badge-->
            <TextView
                android:id="@+id/storage_notification"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/medium_badge"
                android:text="Medium"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Cpu -->
            <!-- Cpu title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=' Cpu: '
                android:textSize="@dimen/rec_text_size"
                android:layout_row="3"
                android:layout_column="0"/>

            <!-- Cpu value-->
            <TextView
                android:id="@+id/cpu_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Critical cpu'
                android:textSize="@dimen/rec_text_size"
                android:layout_row="3"
                android:layout_column="1" />

            <!-- Cpu badge-->
            <TextView
                android:id="@+id/cpu_notification"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/danger_badge"
                android:text="High"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Camera -->
            <!-- Camera title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=' Camera: '
                android:textSize="@dimen/rec_text_size"
                android:layout_row="4"
                android:layout_column="0"/>

            <!-- Camera value-->
            <TextView
                android:id="@+id/camera_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Average camera usage'
                android:textSize="@dimen/rec_text_size"
                android:layout_row="4"
                android:layout_column="1" />

            <!-- Camera badge-->
            <TextView
                android:id="@+id/camera_notification"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ok_badge"
                android:text="Low"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Screen -->
            <!-- Screen title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=' Screen: '
                android:textSize="@dimen/rec_text_size"
                android:layout_row="5"
                android:layout_column="0"/>

            <!-- Screen value-->
            <TextView
                android:id="@+id/screen_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='85% from max in market'
                android:textSize="@dimen/rec_text_size"
                android:layout_row="5"
                android:layout_column="1" />

            <!-- Screen badge-->
            <TextView
                android:id="@+id/screen_notification"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ok_badge"
                android:text="Low"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold" />

        </GridLayout>

    </LinearLayout>

</FrameLayout>
